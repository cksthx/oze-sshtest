# TCEFORM
# ========
TCEFORM {
    tt_content {
        # headlines
        # ---------
        header_layout {
            removeItems = 5, 6
        }
        # Layout
        # ^^^^^
        layout {
            types {
                textmedia {
                    // standard layouts: 0 (default), Layout1, Layout2, Layout3)
                    removeItems = 2,3
                    altLabels.1 = LLL:EXT:project_configuration/Resources/Private/Language/locallang.xlf:tce_forms.frame_class.altLabels.layout.1
                }
                textTeaser {
                    removeItems = 1, 2, 3, primary, secondary, tertiary, quaternary
                    addItems {
                        teaser-display-1 = LLL:EXT:project_configuration/Resources/Private/Language/locallang.xlf:contentElement.textTeaser.teaser-display-1
                    }
                }
                imageTeaser {
                    removeItems = 1, 2, 3, primary, secondary, tertiary, quaternary
                }
                extendedSectionImage {
                    removeItems = 1, 2, 3
                }
            }
        }
        # Frame
        # ^^^^
        frame_class {
            types {
                textmedia {
                    removeItems = 50-left, 50-right, 33-left, 33-right, 66-left, 66-right, 75-left, 75-right, none, no-gutters
                }
                extendedSectionTeaser {
                    removeItems = 50-left, 50-right, 33-left, 33-right, 66-left, 66-right, 75-left, 75-right, none, no-gutters
                }
            }
        }
    }
}

